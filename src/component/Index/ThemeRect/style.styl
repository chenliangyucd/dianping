@import "~common/stylus/variable.styl";

.theme-container
  display: flex
  padding: 10px 0
  justify-content: space-around
  margin-top: $common-mg-top
  color: #fff
  background-color: $bg-white
  .theme-item
    display: flex
    width: 47%
    flex-basis: 47%
    justify-content: space-around
    padding: 12px 0
    background-color: #ffa383
    align-items: center
    .theme-content
      .theme-title
        font-size: 16px 
      .theme-des
        margin-top: 6px
    .theme-img
      width: 60px
      height: 60px