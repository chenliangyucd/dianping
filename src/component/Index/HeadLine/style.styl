.headline-container
  display: flex
  justify-content: space-between
  align-items: center
  padding: 10px 0
  font-size: 15px
  background-color: #fff
  .headline-title
    width: 30px
    flex-basis: 30px
    margin-left: 12px
    color: #ff6734
    font-weight: bold
  .headline-des
    color: #111
    font-weight: bold
  .headline-img-container
    position: relative
    width: 50px
    flex-basis: 50px
    height: 50px
    margin-right: 15px
    .headline-img
      width: 100%
      height: 100%
      vertical-align: bottom
    .headline-num
      position: absolute
      right: 6px
      bottom: 6px
      width: 22px
      height: 20px
      line-height: 20px
      text-align: center
      font-size: 10px
      border-radius: 12px
      color: #fff
      background-color: rgba(0, 0, 0, 0.5)