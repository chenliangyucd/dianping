.login-container
  margin-top: 20px
  padding-left: 19px
  font-size: 14px
  background-color: #fff
  .login-line
    display: flex
    height: 55px
    align-items: center
    .login-left
      width: 75px
      flex-basis: 75px
      flex-shrink: 0
    .login-input
      color: #757575
      flex-grow: 1
      width: 40px
      border-color: transparent
    .login-input:focus 
      outline: none
    .login-verify-btn
      width: 112px
      flex-basis: 112px
      flex-shrink: 0
      padding:5px 0
      color: #333
      border: 1px solid #bbb
      background-color: #fff
      border-radius: 4px
  .login-line:first-of-type
    border-bottom: 1px solid #f0f0f0